  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug tests with LLDB",
      "type": "cppdbg",
      "request": "launch",
      "program": "/usr/local/bin/node",
      "preLaunchTask": "",
      "args": [
        "--harmony",
        "./node_modules/jest-cli/bin/jest.js",
        "--runInBand",
        "--verbose=false"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "lldb"
    },
    {
      "name": "Debug numpy test with LLDB",
      "type": "cppdbg",
      "request": "launch",
      "program": "/usr/local/bin/node",
      "preLaunchTask": "",
      "args": [
        "--harmony",
        "./node_modules/jest-cli/bin/jest.js",
        "--runInBand",
        "tests/basic.tests.ts",
        "-t",
        "numpy",
        "--verbose=false"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "lldb"
    }
  ]
}
